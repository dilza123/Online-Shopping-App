<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">


    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/adding"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:textSize="26dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="70dp">


        <ImageView
            android:id="@+id/t_shirts"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/tshirts"
            android:background="@android:color/white"/>

        <ImageView
            android:id="@+id/female_dresses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:src="@drawable/female_dresses"
            android:background="@android:color/white"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="20dp">



        <ImageView
            android:id="@+id/laptops_pc"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="60dp"
            android:src="@drawable/laptops"
            android:background="@android:color/white"/>
        <ImageView
            android:id="@+id/watches"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/watches"
            android:background="@android:color/white"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="20dp">


        <ImageView
            android:id="@+id/glasses"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/glasses"
            android:background="@android:color/white"
            android:layout_marginRight="50dp"
            />


        <ImageView
            android:id="@+id/shoes"
            android:background="@android:color/white"
            android:layout_width="95dp"
            android:layout_height="90dp"
            android:src="@drawable/shoess"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="55dp"
            />
    </LinearLayout>

</RelativeLayout>